<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/option_bg"
    tools:context=".MainActivity">



    <ImageButton
        android:id="@+id/GoldneyID"
        android:layout_width="250dp"
        android:layout_height="150dp"
        android:background="@drawable/goldney_intro"
        android:layout_marginTop="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/RoyalID"
        app:layout_constraintVertical_chainStyle="spread"
        />


    <ImageButton
        android:id="@+id/RoyalID"
        android:layout_width="250dp"
        android:layout_height="150dp"
        android:background="@drawable/royal_intro"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/GoldneyID"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
